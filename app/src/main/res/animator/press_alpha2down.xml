<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:duration="50"
            android:propertyName="alpha"
            android:valueTo="0.5" />
    </item>

    <item android:state_pressed="false">
        <objectAnimator
            android:duration="50"
            android:propertyName="alpha"
            android:valueTo="1.0" />
    </item>
</selector>