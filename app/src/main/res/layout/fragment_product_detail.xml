<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.ecreditpal.danaflash.data.ComConsKt" />

        <variable
            name="vm"
            type="com.ecreditpal.danaflash.ui.detail.ProductViewModel" />

        <variable
            name="product"
            type="com.ecreditpal.danaflash.model.ProductRes.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/dana_red"
            app:layout_constraintBottom_toBottomOf="@id/space"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amount_summary" />

        <ImageView
            android:id="@+id/icon"
            imageUrl="@{ComConsKt.IMAGE_PREFIX + product.image}"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{product.name}"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            tools:text="Product name" />

        <View
            android:id="@+id/h_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/amount_summary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/amount" />

        <TextView
            android:id="@+id/amount"
            rupiahAmount="@{product.amountMax}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/h_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="100Juta" />

        <TextView
            android:id="@+id/amount_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah maksimum"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/amount"
            app:layout_constraintStart_toStartOf="@id/amount"
            app:layout_constraintTop_toBottomOf="@id/amount" />


        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text='@{"≥" + product.interestMin + "%"}'
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/h_divider"
            app:layout_constraintTop_toTopOf="@id/amount"
            tools:text="≥0.89%" />

        <TextView
            android:id="@+id/rate_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acuan Bunga"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/rate"
            app:layout_constraintStart_toStartOf="@id/rate"
            app:layout_constraintTop_toBottomOf="@id/rate" />

        <TextView
            android:id="@+id/fill_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/def_edge_margin"
            android:text="@string/fill_information"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/space" />

        <com.ecreditpal.danaflash.widget.SettingItem
            android:id="@+id/base_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_white_mask"
            app:layout_constraintTop_toBottomOf="@id/fill_info"
            app:siEndTextBackground="@drawable/shape_red_solid_r20"
            app:siEndTextColor="@color/sub_text"
            app:siStartIcon="@drawable/ic_base_info"
            app:siTitle="@string/base_info" />

        <com.ecreditpal.danaflash.widget.SettingItem
            android:id="@+id/other_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_white_mask"
            app:layout_constraintTop_toBottomOf="@id/base_info"
            app:siEndTextBackground="@drawable/shape_daan_gray_solid_r20"
            app:siEndTextColor="@color/sub_text"
            app:siStartIcon="@drawable/ic_other_info"
            app:siTitle="@string/other_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            android:text='@{"*Dana Flash Tidak  Terlibat Proses Penagihan &amp; Pencairan yang berhubungan dengan " + product.name}'
            android:textColor="@color/sub_text"
            app:layout_constraintTop_toBottomOf="@id/other_info"
            tools:text=" Tidak  Terlibat Proses Penagihan &amp; Pencairan yang berhubungan dengan " />

        <Button
            android:id="@+id/loan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dana_red"
            android:enabled="@{vm.orderProcessingRes.status != 1}"
            android:gravity="center"
            android:stateListAnimator="@animator/press_alpha2down"
            android:text="@{vm.orderProcessingRes.statusString()}"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/online_loan" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>