<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DanaFlash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dana_red</item>
        <item name="colorPrimaryVariant">@color/dana_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dana_red</item>
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="SplashTheme" parent="Theme.DanaFlash">
        <item name="android:windowBackground">@drawable/pic_splash</item>
    </style>
</resources>