<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DanaFlash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dana_red</item>
        <item name="colorPrimaryVariant">@color/dana_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dana_red</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@color/divider</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.DanaFlash">
        <item name="android:windowBackground">@drawable/layer_start</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">@dimen/def_edge_margin</item>
        <item name="android:layout_marginEnd">@dimen/def_edge_margin</item>
        <item name="android:layout_marginBottom">@dimen/def_edge_margin</item>
        <item name="android:background">@drawable/selector_dash_btn</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>